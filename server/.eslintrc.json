{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint",
        "import"
    ],
    "rules": {
        "no-console": "error",
        "indent": [
            "error",
            2
        ],
        "no-multiple-empty-lines": [
            "error",
            {
                "max": 1
            }
        ],
        "camelcase": [
            "error",
            {
                "properties": "never"
            }
        ],
        "semi": [
            "error",
            "never"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "@typescript-eslint/type-annotation-spacing": "error",
        "@typescript-eslint/explicit-function-return-type": "warn",
        "import/order": [
            "error",
            {
                "groups": [
                    "external",
                    "builtin",
                    [
                        "parent",
                        "sibling",
                        "index"
                    ]
                ],
                "pathGroups": [
                    {
                        "pattern": "../*",
                        "group": "parent"
                    },
                    {
                        "pattern": "./*",
                        "group": "sibling"
                    },
                    {
                        "pattern": "*",
                        "group": "index"
                    }
                ],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc"
                }
            }
        ]
    }
}
